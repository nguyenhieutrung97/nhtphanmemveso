@model Model.EFModels.PhieuPhatHanh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-header">
                        <strong class="card-title">Credit Card</strong>
                    </div>
                    <div class="card-body">
                        <!-- Credit Card -->
                        <div id="pay-invoice">
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center">Sửa Phieu Phast Hanh</h3>
                                </div>
                                <hr>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.PhieuPhatHanhId)
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DaiLyId, "DaiLyId", htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.DropDownList("DaiLyId", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DaiLyId, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LoaiVeSoId, "LoaiVeSoId", htmlAttributes: new { @class = "control-label col-md-2" })
                                        
                                            @Html.DropDownList("LoaiVeSoId", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.LoaiVeSoId, "", new { @class = "text-danger" })
                                        
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NgayPhat, htmlAttributes: new { @class = "control-label col-md-2" })
                                        
                                            @Html.EditorFor(model => model.NgayPhat, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.NgayPhat, "", new { @class = "text-danger" })
                                        
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SLPhat, htmlAttributes: new { @class = "control-label col-md-2" })
                                        
                                            @Html.EditorFor(model => model.SLPhat, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SLPhat, "", new { @class = "text-danger" })
                                        
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SLBanDuoc, htmlAttributes: new { @class = "control-label col-md-2" })
                                        
                                            @Html.EditorFor(model => model.SLBanDuoc, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SLBanDuoc, "", new { @class = "text-danger" })
                                        
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


