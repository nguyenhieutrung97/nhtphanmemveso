@model Model.ViewModels.DotPhatHanh
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create","DotPhatHanhs", new { ngayPhat=Model.NgayPhat,loaiVeSoId=Model.LoaiVeSoId },FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">


    <h4>Đợt phát hành ngày @ViewBag.NgayPhatHanh vé số @ViewBag.LoaiVeSo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @for (int i = 0; i < Model.ListPhieuPhatHanh.Count; i++)
    {

        <div class="form-group">
            Đại lý: @Html.EditorFor(modelItem => Model.ListPhieuPhatHanh[i].TenDaiLy, new { htmlAttributes = new {  @value = @Model.ListPhieuPhatHanh[i].TenDaiLy, @readonly = "readonly",@style= "background-color: #dee2e6;" } })
            
            <label class=" form-control-label">So luong phat:</label>
            @Html.EditorFor(modelItem => Model.ListPhieuPhatHanh[i].SLPhat, new { htmlAttributes = new {  @value = @Model.ListPhieuPhatHanh[i].SLPhat } })
        </div>
        <hr />
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

