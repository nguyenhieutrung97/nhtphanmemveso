@model List<Model.ViewModels.PhieuDangKyVM>

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-header">
                        <strong class="card-title">Tạo mới phiếu đăng ký</strong>
                    </div>
                    <div class="card-body">
                        <!-- Credit Card -->
                        <div id="pay-invoice">
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center">Tạo Phiếu Đăng Ký</h3>
                                </div>
                                <hr>
                                @using (Html.BeginForm("Create", "PhieuDangKies", new { ngayDangKy = ViewBag.NgayDangKy, daiLyId = ViewBag.DaiLyId }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    @for(int i = 0; i < Model.Count(); i++)
                                    {
                                    <div class="form-group">
                                        @Html.EditorFor(modelItem => Model[i].TenTinh, new { htmlAttributes = new { @value = @Model[i].TenTinh, @readonly = "readonly", @style = "background-color: #dee2e6;" } })

                                        @Html.EditorFor(modelItem => Model[i].SLDangKy, new { htmlAttributes = new { @value = @Model[i].SLDangKy, @class = "form-control" } })
                                        @Html.ValidationMessageFor(modelItem => Model[i].SLDangKy, "", new { @class = "text-danger" })

                                    </div>
                                    }


                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

